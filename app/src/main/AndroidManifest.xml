            android:name=".taxes.car_tax_activity"
            android:exported="false" />
        <activity
            android:name=".empty_activity"
            android:exported="false" />
        <activity
            android:name=".HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".Home"
            android:exported="false"
            android:label="Home" />
